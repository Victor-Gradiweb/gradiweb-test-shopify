{% assign ext = '.css' %}

{% if development %}
  {% assign ext = '.dev.css' %}
{% endif %}

<link
  rel="stylesheet"
  href="{{ 'theme.css' | append: ext | asset_url }}"
>

{% render 'preload-css', ext: ext, asset: 'cart' %}

{%- if request.page_type == 'product' -%}
  {% render 'preload-css', ext: ext, asset: 'product' %}
{%- endif -%}

{%- if request.page_type == 'collection' -%}
  {% render 'preload-css', ext: ext, asset: 'collection' %}
{%- endif -%}

{%- if request.page_type contains 'customers' -%}
  {% render 'preload-css', ext: ext, asset: 'customer' %}
{%- endif -%}